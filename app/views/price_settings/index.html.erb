<h1>Listing price_settings</h1>

<table>
  <tr>
    <th>Currency buy</th>
    <th>Absolute buy rate</th>
    <th>Relative buy rate</th>
    <th>Visible for site</th>
    <th>Visible for stock</th>
    <th>Visible for shops</th>
    <th>Retail rate</th>
    <th>Kilo price</th>
    <th>Currency weight</th>
    <th>Relative weight coefficient</th>
    <th>Absolute weight ccoefficient</th>
    <th>Presence</th>
    <th>Output Order</th>
    <th>Weight unavaliable rate</th>
    <th>Delivery days declared</th>
    <th>Import job</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @price_settings.each do |price_setting| %>
  <tr>
    <td><%= price_setting.currency_buy %></td>
    <td><%= price_setting.absolute_buy_rate%></td>
    <td><%= price_setting.relative_buy_rate%></td>
    <td><%= price_setting.visible_for_site %></td>
    <td><%= price_setting.visible_for_stock %></td>
    <td><%= price_setting.visible_for_shops %></td>
    <td><%= price_setting.retail_rate %></td>
    <td><%= price_setting.kilo_price %></td>
    <td><%= price_setting.currency_weight %></td>
    <td><%= price_setting.relative_weight_rate %></td>
    <td><%= price_setting.absolute_weight_rate %></td>
    <td><%= price_setting.presence %></td>
    <td><%= price_setting.output_order%></td>
    <td><%= price_setting.weight_unavailable_rate %></td>
    <td><%= price_setting.delivery_days_declared %></td>
    <td><%= price_setting.import_job %></td>
    <td><%= link_to 'Show', supplier_price_settings_path(params[:supplier_id]) %></td>
    <td><%= link_to 'Edit', edit_supplier_price_setting_path(params[:supplier_id], price_setting) %></td>
    <td><%= link_to 'Destroy', supplier_price_setting_path(params[:supplier_id], price_setting), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


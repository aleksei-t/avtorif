<h1>Editing folder_setting</h1>

<% form_for(@folder_setting) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :path %><br />
    <%= f.text_field :path %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @folder_setting %> |
<%= link_to 'Back', folder_settings_path %>
<%
   case params[:action]
       when 'new'
        url = supplier_job_ftp_receives_path(params[:supplier_id], params[:job_id])
       when 'edit'
        url = supplier_job_ftp_receive_path(params[:supplier_id], params[:job_id], params[:id])
   end
%>

<% semantic_form_for(@ftp_receive, :url => url) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :server %><br />
    <%= f.text_field :server %>
  </p>
  <p>
    <%= f.label :port %><br />
    <%= f.text_field :port %>
  </p>
  <p>
    <%= f.label :path %><br />
    <%= f.text_field :path %>
  </p>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.buttons %>
  </p>
<% end %>
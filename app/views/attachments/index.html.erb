<h1>Listing attachments</h1>

<table>
  <tr>
    <th>attachment file name</th>
    <th>attachment content type</th>
    <th>attachment file size</th>
  </tr>

<% @attachments.each do |attachment| %>
  <tr>
    <td><%=h attachment.attachment_file_name %></td>
    <td><%=h attachment.attachment_content_type %></td>
    <td><%=h attachment.attachment_file_size %></td>
    <td><%= link_to 'Show', attachment %></td>
    <td><%= link_to 'Edit', edit_attachment_path(attachment) %></td>
    <td><%= link_to 'Destroy', attachment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New attachment', new_attachment_path %>
<h1>New attachment</h1>

<% semantic_form_for(@attachment, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <%= f.input :supplier %>
    
  <p>
    <%= f.label :attachment %><br />
    <%= f.file_field :attachment %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>


<%= link_to 'Back', attachments_path %>
<h1>New repeat</h1>

<% form_for(@repeat) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :cron_string %><br />
    <%= f.text_field :cron_string %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', repeats_path %>
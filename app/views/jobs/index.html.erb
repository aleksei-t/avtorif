<h1>Listing jobs</h1>

<table>
<% @jobs.each do |job| %>
  <tr>
    <td>след. ст.<br /> <%=h job.next_start %></td>
    <td>посл. ст.<br /> <%=h job.last_start %></td>
    <td>посл. усп. зап.<br /> <%=h job.last_finish %></td>
    <td><%=h job.title %></td>
    <td><%=h job.repeats.map{ |repeat| repeat.title + ", "} %></td>
    <td><%=h job.parent.try(:title) %></td>
    <td><%= if job.jobable.blank?
                link_to("Получение", new_job_receive_job_path(job)) + " " +
                link_to("Импорт", new_job_import_job_path(job))
            else
                link_to("Конкретная задача", edit_polymorphic_path(job.jobable))
            end
        %> 
    </td>
    <td><%=h job.file_mask %></td>
    <td>
    <%
       begin
           job.parent.title
       rescue NoMethodError
       end
    %>
    </td>
    <td>
    <%= job.critical %>
    </td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_supplier_job_path(job.supplier, job) %></td>
    <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Start', start_job_path(job) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to('New job', new_supplier_job_path) if !params[:supplier_id].blank?%>
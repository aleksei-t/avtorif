<%= render :template => '/prices/search_form.html.erb' %>

<%
xm = Builder::XmlMarkup.new
xm.table {
  #xm.tr {@header.each {|value| xm.th(value)}}
  @prices.each_with_index do |line, index|
    if index % 3 == 0
      xm.tr {@header.each {|value| xm.th(value)}}
    end
    xm.tr do
      @header.each{|key| xm.td(line[key])}
      #line.each {|key, value| xm.td(value)}
    end
  end
}
%>
<%= raw xm.target %>

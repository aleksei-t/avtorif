<h1>Listing goods</h1>

<table>
  <tr>
    <th>Price</th>
    <th>Contractor</th>
    <th>Code</th>
    <th>Manufacturer</th>
    <th>Cost</th>
  </tr>

<% @goods.each do |good| %>
  <tr>
    <td><%=h good.price %></td>
    <td><%=h good.contractor %></td>
    <td><%=h good.code %></td>
    <td><%=h good.manufacturer %></td>
    <td><%=h good.cost %></td>
    <td><%= link_to 'Show', good %></td>
    <td><%= link_to 'Edit', edit_good_path(good) %></td>
    <td><%= link_to 'Destroy', good, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New good', new_good_path %>
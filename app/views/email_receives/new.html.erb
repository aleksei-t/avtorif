  </p>

  <p>
    <%= f.label :port %><br />
    <%= f.text_field :port %>
  </p>

  <p>
    <%= f.label :ssl %><br />
    <%= f.text_field :ssl %>
  </p>

  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>

